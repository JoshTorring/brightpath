{
  "name": "brightpath",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:migrate": "pnpm --filter @brightpath/db prisma migrate dev --name init",
    "db:seed": "pnpm --filter @brightpath/db prisma db seed"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.4.5",
    "eslint": "^9.0.0",
    "@types/node": "^20.11.30",
    "prettier": "^3.2.5"
  }
}